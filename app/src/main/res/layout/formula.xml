<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_200">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/home"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="HOME"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/kinematika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кинематика"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/dinamika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Динамика"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/statika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статика"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/hidrostatika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Гидростатика"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/impuls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Импульс"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/ashxatanq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Работа, мощность, энергия"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/termodinamika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Термодинамика"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/elektroctatika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Электростатика"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/elektrakan_tok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Электрический ток"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/kolebaniya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Колебания"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/optika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оптика"
                app:cornerRadius="100dp" />
        </LinearLayout>
    </ScrollView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>
